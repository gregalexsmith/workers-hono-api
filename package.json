    "drizzle-orm": "^0.37.0",
    "hono": "^4.6.13",
    "lucia": "^3.2.2",
    "oslo": "^1.2.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240208.0",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "better-sqlite3": "^11.6.0",
    "drizzle-kit": "^0.29.1",
    "eslint": "^8.57.0",
    "prettier": "3.4.2",
    "wrangler": "^3.32.0"
  }
