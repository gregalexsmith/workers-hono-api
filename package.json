{
  "type": "module",
  "scripts": {
    "dev": "wrangler dev src/index.ts",
    "format": "prettier --write .",
    "lint": "eslint ./src",
    "deploy": "wrangler deploy --minify src/index.ts",
    "db:generate": "drizzle-kit generate",
    "db:upgrade": "drizzle-kit up",
